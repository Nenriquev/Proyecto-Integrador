<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/65050c03d1.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="../img/favico.ico" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="../css/partials_styles/footer.css">
    <link rel="stylesheet" type="text/css" href="../css/partials_styles/header.css">
    <link rel="stylesheet" type="text/css" href="../css/partials_styles/button.css">
    <link rel="stylesheet" type="text/css" href="../css/animation.css">
    <link rel="stylesheet" href="/css/cart.css">
    <title>Mi carrito</title>
</head>
  <body>
    <div class="main-container">
      <%- include('./partials/header') %> 
        <div class="cart-container">
          <div class="cart-board">
            <div class="resume">

              
              <div class="products">
                <div class="product-img">
                  <img src="../img/pizzas/<%= pizzaElegida.image %> ">
                </div>
                  <div class="box">
                      <div class="name-amount">
                        <h4><%= pizzaElegida.name %> </h4>
                          <div class="amount">
                            <i class="fas fa-dollar-sign"></i><h4><%= pizzaElegida.price %></h4>
                          </div>
                      </div>
                      <div class="description-box">
                        <div class="description">
                          <%if(dataQuesos.length > 0 || dataCarnes.length > 0 || dataVegetales.length > 0){ %>
                          <%if(dataQuesos.length > 0){%>
                            <h5>Quesos</h5>
                          <% dataQuesos.forEach(function(quesos) { %>
                          <span><%= quesos.cantidad %> x <%= quesos.value %> </span>
                          <% }); }%>

                          <%if(dataCarnes.length > 0){%>
                            <h5>Carnes</h5>
                            <% dataCarnes.forEach(function(carnes) { %>
                              <span><%= carnes.cantidad %> x <%= carnes.value %></span>
                          <% }); }%>

                          <%if(dataVegetales.length > 0){%>
                            <h5>Vegetales</h5>
                          <% dataVegetales.forEach(function(vegetales) { %>
                            <span><%= vegetales.cantidad %> x <%= vegetales.value %></span>
                          <% }); }%>
                          <% } else{ %>
                            <h5>Sin extras</h5>
                          <%} %>
                        </div>
                        <div class="description">
                          <%if(dataBebidas.length > 0){%>
                            <h5>Bebidas</h5>
                            <% dataBebidas.forEach(function(bebidas) { %>
                              <span><%= bebidas.cantidad %> x <%= bebidas.value %> </span>
                          <% }); }%>
                        </div>
                        <div class="qty">
                          <button class="min-plus">-</button>
                            <input type="number" class="count" value="1">
                          <button class="min-plus">+</button>
                        </div>
                        

                      </div>
                  </div>
              </div>
            </div>

            <div class="resume-col">
              <div class="title-resume">
                <h3>üçï resumen de la orden: </h3>
              </div>
              <div class="check-box">
                <div class="bill">
                  <span>Subtotal:</span>
                  <span>$5.000</span>
                </div>
                <div class="bill">
                  <span>Delivery:</span>
                  <span>$150</span>
                </div>
                <div class="bill">
                  <span>Descuentos:</span>
                  <span>$0</span>
                </div>
                <div class="bill">
                  <span class="total">Total:</span>
                  <span class="total">$5.150</span>
                </div>
              </div>

              <div class="pay-button">
                <a href="#" class="bttn-dark">Pagar üöÄ</a>
              </div>
            </div>
          </div>   
    </div>
    </div>
  </body>
</html>