<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/65050c03d1.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="../img/favico.ico" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="../css/partials_styles/footer.css">
    <link rel="stylesheet" type="text/css" href="../css/partials_styles/header.css">
    <link rel="stylesheet" type="text/css" href="../css/partials_styles/button.css">
    <link rel="stylesheet" type="text/css" href="../css/animation.css">
    <link rel="stylesheet" href="/css/cart.css">
    <title>Mi carrito</title>
</head>
  <body>
    <div class="main-container">
      <%- include('./partials/header') %> 
        <div class="cart-container">
          <div class="cart-board">
            <div class="resume">

              <div class="products">
                <div class="product-img">
                  <img src="../img/pizzas/Marte.webp">
                </div>
                  <div class="box">
                      <div class="name-amount">
                        <h4>Pizza Marte</h4>
                          <div class="amount">
                            <i class="fas fa-dollar-sign"></i><h4> 750</h4>
                          </div>
                      </div>
                      <div class="description-box">
                        <div class="description">
                          <span>1 x Extra muzzarella</span>
                          <span>1 x Extra tomate</span>
                          <span>1 x Extra panceta</span>
                          <span>1 x Extra provolone</span>
                        </div>
                        <div class="qty">
                          <button class="min-plus">-</button>
                            <input type="number" class="count" value="1">
                          <button class="min-plus">+</button>
                        </div>
                      </div>
                  </div>
              </div>

              <div class="products">
                <div class="product-img">
                  <img src="../img/pizzas/Mercurio.webp">
                </div>
                  <div class="box">
                      <div class="name-amount">
                        <h4>Pizza Mercurio</h4>
                        <div class="amount">
                          <i class="fas fa-dollar-sign"></i><h4>750</h4>
                        </div>
                      </div>
                      <div class="description-box">
                        <div class="description">
                          <span>1 x Extra muzzarella</span>
                        </div>
                        <div class="qty">
                          <button class="min-plus">-</button>
                            <input type="number" class="count" value="1">
                          <button class="min-plus">+</button>
                        </div>
                      </div>
                  </div>
              </div>

              <div class="products">
                <div class="product-img">
                  <img src="../img/pizzas/Jupiter.webp">
                </div>
                  <div class="box">
                      <div class="name-amount">
                        <h4>Pizza jupiter</h4>
                        <div class="amount">
                          <i class="fas fa-dollar-sign"></i><h4>1750</h4>
                        </div>
                      </div>
                      <div class="description-box">
                        <div class="description">
                          <span>1 x Extra parmesano</span>
                          <span>1 x Extra cebolla</span>
                          <span>1 x Extra aceite de oliva</span>
                        </div>
                        <div class="qty">
                          <button class="min-plus">-</button>
                            <input type="number" class="count" value="1">
                          <button class="min-plus">+</button>
                        </div>
                      </div>
                  </div>
              </div>

            </div>

            <div class="resume-col">
              <div class="title-resume">
                <h3>üçï resumen de la orden: </h3>
              </div>
              <div class="check-box">
                <div class="bill">
                  <span>Subtotal:</span>
                  <span>$5.000</span>
                </div>
                <div class="bill">
                  <span>Delivery:</span>
                  <span>$150</span>
                </div>
                <div class="bill">
                  <span>Descuentos:</span>
                  <span>$0</span>
                </div>
                <div class="bill">
                  <span class="total">Total:</span>
                  <span class="total">$5.150</span>
                </div>
              </div>

              <div class="pay-button">
                <a href="#" class="bttn-dark">Pagar üöÄ</a>
              </div>
            </div>
          </div>   
    </div>
    </div>
  </body>
</html>