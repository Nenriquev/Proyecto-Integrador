<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/65050c03d1.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="../img/favico.ico" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="../css/partials_styles/footer.css">
    <link rel="stylesheet" type="text/css" href="../css/partials_styles/header.css">
    <link rel="stylesheet" type="text/css" href="../css/partials_styles/button.css">
    <link rel="stylesheet" type="text/css" href="../css/animation.css">
    <link rel="stylesheet" href="/css/cart.css">
    <title>Mi carrito</title>
</head>
  <body>
    <div class="main-container">
      <%- include('./partials/header') %> 
        <div class="cart-container">
          <div class="cart-board">
            <div class="resume">

              <div class="products">
                <div class="product-img">
                  <img src="../img/pizzas/<%= pizzaElegida.image %> ">
                </div>
                  <div class="box">
                      <div class="name-amount">
                        <h4><%= pizzaElegida.name %> </h4>
                          <div class="amount">
                            <i class="fas fa-dollar-sign"></i><h4><%= pizzaElegida.price %></h4>
                          </div>
                      </div>
                      <div class="description-box">
                        <div class="description">
                          <%if(quesosPedidos.length > 0 || carnesPedidas.length > 0 || vegetalesPedidos.length > 0){ %>
                          <%if(quesosPedidos.length > 0){%>

                            <h5>Quesos</h5>
                          <% quesosPedidos.forEach(function(quesos) { %>
                          <span>* <%= quesos.name %> $<%= quesos.price %> </span>
                          <% }); }%>

                          <%if(vegetalesPedidos.length > 0){%>
                            <h5>Vegetales</h5>
                          <% vegetalesPedidos.forEach(function(vegetales) { %>
                            <span>* <%= vegetales.name %> $<%= vegetales.price %></span>
                          <% }); }%>

                          <%if(carnesPedidas.length > 0){%>
                            <h5>Carnes</h5>
                            <%carnesPedidas.forEach(function(carnes) { %>
                              <span>* <%= carnes.name %> $<%= carnes.price %></span>
                          <% }); }%>

                          <% } else{ %>
                            <h5>Sin extras</h5>
                          <%} %>
                        </div>
                        <div class="description">
                          <%if(bebidasPedidas.length > 0 || bebidasAlcoholicasPedidas.length > 0){%>
                            <h5>Bebidas</h5>
                            <% bebidasPedidas.forEach(function(bebidas) { %>
                              <span>* <%= bebidas.cantidad %> x <%= bebidas.name %> $<%= bebidas.price %> c/u</span>
                          <% });%>
                          <% bebidasAlcoholicasPedidas.forEach(function(alcohol) { %>
                            <span>* <%= alcohol.cantidad %> x <%= alcohol.name %> $<%= alcohol.price %> c/u</span>
                        <% }); }%>
                        </div>
                        <div class="description">
                          <%if(postresPedidos.length > 0){%>
                            <h5>Postres</h5>
                            <% postresPedidos.forEach(function(postres) { %>
                              <span>* <%= postres.cantidad %> x <%= postres.name %> $<%= postres.price %> c/u</span>
                          <% }); }%>
                        </div>
                        <div class="qty">
                          <button class="min-plus">-</button>
                            <input type="number" class="count" value="1">
                          <button class="min-plus">+</button>
                        </div>
                        

                      </div>
                  </div>
              </div>
              
            </div>

            <div class="resume-col">
              <div class="title-resume">
                <h3>üçï resumen de la orden: </h3>
              </div>
              <div class="check-box">
                <div class="bill">
                  <span>Subtotal:</span>
                  <span><%= precioSumado %> </span>
                </div>
                <div class="bill">
                  <span>Delivery:</span>
                  <span>$0</span>
                </div>
                <div class="bill">
                  <span>Descuentos:</span>
                  <span>$0</span>
                </div>
                <div class="bill">
                  <span class="total">Total:</span>
                  <span class="total"><%= precioSumado %></span>
                </div>
              </div>

              <div class="pay-button">
                <a href="#" class="bttn-dark">Pagar üöÄ</a>
              </div>
            </div>
          </div>   
    </div>
    </div>
  </body>
</html>