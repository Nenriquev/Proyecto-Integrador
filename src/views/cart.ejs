<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/65050c03d1.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="../img/favico.ico" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="../css/partials_styles/footer.css">
    <link rel="stylesheet" type="text/css" href="../css/partials_styles/header.css">
    <link rel="stylesheet" type="text/css" href="../css/partials_styles/button.css">
    <link rel="stylesheet" type="text/css" href="../css/animation.css">
    <link rel="stylesheet" href="/css/cart.css">
    <title>Mi carrito</title>
</head>
  <body>
    <div class="main-container">
      <%- include('./partials/header') %> 
        <div class="cart-container">
          <div class="cart-board">
            <div class="resume">
              <% if (locals.cart && locals.cart.length > 0) { %>
                <% locals.cart.forEach((element, index) => { %>
                  <div class="products">
                    <div class="product-img">
                      <img src="../img/pizzas/<%= element?.pizza?.image %>">
                    </div>
                      <div class="box">
                          <div class="name-amount">
                            <h4><%= element?.pizza?.name %></h4>
                              <div class="amount">
                                <i class="fas fa-dollar-sign"></i><h4><%= element?.pizza?.price %></h4>
                              </div>
                          </div>
                          <div class="description-box">
                            <div class="extras-box">
                              <div class="description">
                              
                                  <% if (element?.extras?.quesos?.length > 0) { %>
                                    <h5 class="extra-title">Quesos $150</h5>
                                      <% element?.extras?.quesos.forEach(queso => { %>
                                        <span> Extra <%= queso.name %></span>
                                      <% }) %>
                                  <% } %>

                                  <% if (element?.extras?.vegetales?.length > 0) { %>
                                    <h5 class="extra-title">Vegetales $150</h5>
                                      <% element.extras.vegetales.forEach(vegetal => { %>
                                        <span> Extra <%= vegetal.name %></span>
                                      <% }) %>
                                  <% } %>

                                  <% if (element?.extras?.proteinas?.length > 0) { %>
                                    <h5 class="extra-title">Carnes $250</h5>
                                      <% element?.extras?.proteinas?.forEach(proteina => { %>
                                        <span> Extra <%= proteina.name %></span>
                                      <% }) %>
                                  <% } %>
                                
                                  <% if (element?.extras?.quesos?.length == 0 && element?.extras?.vegetales?.length == 0 && element?.extras?.proteinas?.length == 0) { %>
                                  <h5 class="extra-title">Sin extras</h5>
                                  <% } %>
    
                              </div>
                              <div class="description">
                                <% if (element?.bebidas?.gaseosas?.bebidasPedidas.length > 0) { %>
                                  <h5 class="extra-title">Gaseosas</h5>
                                    <% element.bebidas.gaseosas.bebidasPedidas.forEach((gaseosa, i) => { %>
                                      <span><%= gaseosa.name %></span>
                                      <span><%= "x "+element.bebidas.gaseosas.cantidadBebidasPedidas[i] %></span>
                                    <% }) %>
                                <% } %>

                                <% if (element?.bebidas?.cervezas?.alcoholPedidas.length > 0) { %>
                                  <h5 class="extra-title">Cervezas</h5>
                                    <% element.bebidas.cervezas?.alcoholPedidas.forEach((cerveza, i) => { %>
                                      <span><%= cerveza.name %></span>
                                      <span><%= "x "+element.bebidas.cervezas.cantidadAlcoholPedidas[i] %></span>
                                    <% }) %>
                                <% } %>
                                
                                <% if (element?.postres?.postresPedidos.length > 0) { %>
                                  <h5>Postres</h5>
                                    <% element?.postres?.postresPedidos.forEach((postre, i) => { %>
                                      <span><%= postre.name %></span>
                                      <span><%= "x "+element.postres.cantidadPostresPedidos[i] %></span>
                                    <% }) %>
                                <% } %>
                              </div>
                            </div>
                        
                            <div class="div-qty">
                              <div class="qty">
                                <button class="min-plus" id="sub" onclick="totalPay()">-</button>
                                  <input type="number" class="count" id="count" value="1" readonly>
                                <button class="min-plus" id="sum" onclick="totalPay()">+</button>
                              </div>
                              <div class="div-trash">
                                <form action="/cart/<%= index %>?_method=DELETE" method="post">
                                  <button type="submit" id="<%= index %>" class="btn-trash"><i class="fas fa-trash"></i></button>
                                </form>
                              </div>
                            </div>
                      
                          </div>
                      </div>
                  </div>
                  
                  <% }) %>

                  <% } else { %>

                   <h1 class="vacio">El carrito esta vacio</h1>

              <% } %>
    
            </div>

            <div class="resume-col">
              <div class="title-resume">
                <h3>üçï resumen de la orden: </h3>
              </div>
              <div class="check-box">
                <div class="bill">
                  <span>Subtotal:</span>
                  <% let totalPrice = 0%>
                  <% locals.cart.forEach((element, index) => { %>   
                    <% totalPrice= totalPrice + element.pizza.price%>
                    <% element?.extras?.quesos.forEach(queso => { %>       
                      <% totalPrice= totalPrice + queso.price%>
                    <% }) %>
                    <% element.extras.vegetales.forEach(vegetal => { %>
                      <% totalPrice= totalPrice + vegetal.price%>
                    <% }) %>
                    <% element?.extras?.proteinas?.forEach(proteina => { %>
                      <% totalPrice= totalPrice + proteina.price%>
                    <% }) %>
                    <% element.bebidas.gaseosas.bebidasPedidas.forEach((gaseosa, i) => { %>
                      <%let gaseosaCant = element.bebidas.gaseosas.cantidadBebidasPedidas[i] %>
                      <% totalPrice= totalPrice + (gaseosa.price*gaseosaCant)%>
                    <% }) %>
                    <% element.bebidas.cervezas?.alcoholPedidas.forEach((cerveza, i) => { %>
                      <%let cervezaCant = element.bebidas.cervezas.cantidadAlcoholPedidas[i] %>
                      <% totalPrice= totalPrice + (cerveza.price*cervezaCant)%>
                    <% }) %>
                    <% element?.postres?.postresPedidos.forEach((postre, i) => { %>
                      <%let postresCant = element.postres.cantidadPostresPedidos[i]  %>
                      <% totalPrice= totalPrice + (postre.price*postresCant)%>
                    <% }) %>
                  <% })%>
                  <span>$<%= totalPrice %></span>
                </div>
                <div class="bill">
                  <span>Delivery:</span>
                  <span>$0</span>
                </div>
                <div class="bill">
                  <span>Descuentos:</span>
                  <span>$0</span>
                </div>
                <div class="bill">
                  <span class="total">Total:<span>$<%= totalPrice %></span></span>
                  <span class="total" id="total" value=""></span>
                </div>
              </div>
              <div class="payment">
                <h4>informacion de Pago</h4>
                  <form action="">
                  <h3 >Forma de Pago</h3>
                  <div>
                    <span>Efectivo</span>
                    <label class="label-cbx">
                      <input type="radio" name="metodoPago" value="Efectivo" class="invisible"/>
                      <div class="checkbox">
                        <svg width="15px" height="15px" viewBox="0 0 20 20">
                          <path
                            d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"
                          ></path>
                          <polyline points="4 11 8 15 16 6"></polyline>
                        </svg>
                      </div>
                    </label>
                  </div>

                  <div>
                    <span>Tarjeta</span>
                    <label class="label-cbx">
                      <input type="radio" name="metodoPago" value="targeta" class="invisible"/>
                      <div class="checkbox">
                        <svg width="15px" height="15px" viewBox="0 0 20 20">
                          <path
                            d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"
                          ></path>
                          <polyline points="4 11 8 15 16 6"></polyline>
                        </svg>
                      </div>
                    </label>
                  </div>

                    <div class="pay-button">
                      <a href="#" class="bttn-dark">Pagar üöÄ</a>
                    </div>
                  </form>
              </div>
              
            </div>
          </div>   
    </div>
    </div>
  </body>
  <script src="../js/cart.js"></script>
</html>