      <h4>Bebidas 350ml <i class="fas fa-dollar-sign" aria-hidden="true"></i>300</h4>
        <div>

          <% products.filter(bebidas => { %>
            <% if(bebidas.category_id == 5 && bebidas.status_id == 1){%>
              <p>
                <label class="product_detail_cuadro_bebidas"><%= bebidas.name %>
                  <input class="contarBebidas" type="number" value="0" min="0" max="10" name="<%= bebidas.name %>">
                </label>
              </p>
          <% }}); %>

        </div>
      <h4>Cerveza 355ml <i class="fas fa-dollar-sign" aria-hidden="true"></i>450</h4>
        <div>
          <% products.filter(alcohol => { %>
            <% if(alcohol.category_id == 6 && alcohol.status_id == 1){%>
            <p>
              <label class="product_detail_cuadro_bebidas"><%= alcohol.name %>
                <input class="contarBebidas" type="number" value="0" min="0" max="10" name="<%= alcohol.name %>">
